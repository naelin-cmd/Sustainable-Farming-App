<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SustainableFarmingApp.Views.MainPage" BackgroundImage="Farming3.jpg"
    Title="{Binding Title}">
    <ScrollView>

        <StackLayout Margin="20" VerticalOptions="StartAndExpand">
            <Label Text="Login Here" FontSize="Large" TextColor="White" Scale="1.5" HorizontalOptions="CenterAndExpand"/>
            <Image Source="Login.png" Scale="0.2"/>
            <Label Text="Username" TextColor="White"
               FontSize="Large"
                HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
            <Entry Text="{Binding Username}" TextColor="White" FontSize="Medium"  />

            <Label Text="Password" TextColor="White"
               FontSize="Large"
                HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
            <Entry Text="{Binding Password}" TextColor="White" FontSize="Medium" />

            <Button Text="Login" Command="{Binding Login}" CornerRadius="21"/>
            <Button Text= "Sign Up" Command="{Binding SignUp}" CornerRadius="21"/>

        </StackLayout>
    </ScrollView>
</ContentPage>